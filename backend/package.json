{
  "name": "backend",
  "version": "1.0.0",
  "description": "Project Management Backend API with Swagger Documentation",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "swagger:setup": "node setup-swagger.js",
    "swagger:validate": "node scripts/validate-swagger.js",
    "swagger:export": "node scripts/export-swagger.js",
    "docs:build": "npm run swagger:setup && npm run swagger:validate",
    "docs:serve": "npm run dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "npm run swagger:setup"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "project-management",
    "api",
    "swagger",
    "openapi",
    "documentation",
    "rest-api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "path": "^0.12.7",
    "socket.io": "^4.7.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.52.0",
    "eslint-config-node": "^4.1.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/projecthub-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/projecthub-backend/issues"
  },
  "homepage": "https://github.com/your-username/projecthub-backend#readme"
}
